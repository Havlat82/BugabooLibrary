<?xml version="1.0" encoding="utf-8"?>
<!-- Konfigurační soubor pro NuGet balíčky 
     MUSÍ BÝT ve stejném adresáři jako soubor řešení. -->
<configuration>
  
  <config>    
    <!-- Nastaví cestu na složku, kam se mají balíčky nainstalovat -->
    <add key="repositoryPath" value=".\packages" />
    <add key="globalPackageFolder" value=".\packages" />
    <!-- Nastaví cestu na složku, kam se mají balíčky publikovat -->
    <add key="defaultPushSource" value=".\publish" />
  </config>
  
  <!-- Přednastavené cesty / zdroje balíčků pro instalaci -->
  <packageSources>
    <add key="Local Package Source" value=".\publish" />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" />
  </packageSources>
  
  <packageRestore>
    <!-- Umožní stahovat chybějící balíčky -->
    <add key="enabled" value="True" />
    <!-- Automaticky testuje zda nechybí nějaký balíček -->
    <add key="automatic" value="True" />
  </packageRestore>
  
</configuration>

